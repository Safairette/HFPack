<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--HFM-7-->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>HFPack_HFMSeven</defName>
		<label>HFM-7</label>
		<description>A high capacity caseless machine pistol, enabled by an experimental magazine design.</description>
		<graphicData>
			<texPath>Weapons/HFMSeven</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Transparent</shaderType>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake></WorkToMake> <!--TODO-->
			<SightsEfficiency></SightsEfficiency>
			<ShotSpread></ShotSpread>
			<SwayFactor></SwayFactor>
			<Bulk></Bulk>
			<Mass></Mass>
			<RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel></Steel> <!--TODO-->
			<ComponentIndustrial></ComponentIndustrial>
			<Plasteel></Plasteel>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount></recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile></defaultProjectile>
				<burstShotCount>6</burstShotCount>
				<ticksBetweenBurstShots></ticksBetweenBurstShots>
				<warmupTime>0.6</warmupTime>
				<range>12</range>
				<soundCast>Shot_HFMSeven</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags>
			<li>AdvancedGun</li> <!--TODO-->
			<li>SpacerGun</li>
			<li>CE_AI_Broom</li>
			<li>CE_OneHandedWeapon</li>
		</weaponTags>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>48</magazineSize>
				<reloadTime>4</reloadTime>
				<ammoSet></ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>TRUE</aiUseBurstMode>
				<aiAimMode>Snapshot</aiAimMode>
				<aimedBurstShotCount>3</aimedBurstShotCount>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.54</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Grip</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.54</cooldownTime>
				<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>0.7,0.7</DrawSize>
				<DrawOffset>0.05,-0.05</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>


